{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": ["noperm", "cat -e", "cat -e", "outfile_tester"],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "/home/onaldo/pipex",
      "program": "/home/onaldo/pipex/pipex",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
		,
        {
          "description": "Seguir o processo filho no fork()",
          "text": "set follow-fork-mode child",
          "ignoreFailures": true
        },
        {
          "description": "NÃ£o se desprender no fork (pai e filho ficam ativos)",
          "text": "set detach-on-fork off",
          "ignoreFailures": true
        },
        {
          "description": "Permitir alternar entre processos sem travar",
          "text": "set scheduler-locking off",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
